      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="card-title"><% if (editing) { %>
              Update Task
              <% } else { %> Add Task <% } %></div>
            <hr>
            <form action="<% if (editing) { %>/api/update-todo<% } else { %>/api/todo<% } %>" method="POST">
              <div class="row">
                <% if (editing) { %>
                  <input type="text" name="id" value="<%= activities._id %>" hidden>
                  <% }  %>
              <div class="form-group col-md-4">
                <label for="input-1">Task</label>
                <input type="text" class="form-control" id="input-1" placeholder="Enter Activity" name="what_todo" value="<% if (editing) { %><%= activities.what_todo %><% }  %>">
              </div>
              <div class="form-group col-md-4">
                <label for="input-3">Day</label>
                <input type="text" class="form-control" id="input-3" placeholder="e.g Morning..." name="period" value="<% if (editing) { %><%= activities.period %><% }  %>">
              </div>
              <div class="form-group col-md-4">
                <label for="input-2">Time</label>
                <input type="text" class="form-control" id="input-2" placeholder="e.g Monday..." name="when" value="<% if (editing) { %><%= activities.when %><% }  %>"">
              </div>
              <div class="form-group" style="margin-left: 20px;;">
                <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i><% if (editing) { %>
                 Update
                    <% } else { %> Add <% } %></button>
              </div>
              </div>
            </form>
          </div>
        </div>
      </div>

	<div class="row">
	 <div class="col-12 col-lg-12">
    <% if (hasActivities) { %>
	   <div class="card">
	     <div class="card-header">TASK(s):  </div>
	       <div class="table-responsive">
                 <table class="table align-items-center table-flush table-borderless" >
                  <thead>
                   <tr>
                     <th>Task</th>
                     <th>Day</th>
                     <th>Time</th>
                     <th>Completed</th>
                     <th>Update</th>
                     <th>Delete</th>
                     <!-- <th>Created Date</th> -->
                   </tr>
                   </thead>
                   <tbody>
                    <% for (let activity of activities.result) {%>
                     <tr>
                    <td><%= activity.what_todo %></td>
                    <td><%= activity.period %></td>
                    <td><%= activity.when %></td>
                    <td style="color: rgb(105, 29, 29);">Not Yet</td>
                    <td>
                        <button type="submit" class="btn btn-light px-4" style="background-color: rgb(41, 168, 52);"><a href="/api/update-todo/<%= activity._id %>?edit=true"> Update </a></button>
                    </td>
                    <td>
                      <form action="/api/delete-todo/<%= activity._id%>" method="POST">
                        <button type="submit" class="btn btn-light px-4" style="background-color: rgb(105, 29, 29);"> Delete </button>
                        <!-- <span style="text-align: center; color: red;">X</span> -->
                    </form>
                  </td>
                   
                      </tr>
                      <% } %>
                      
                 </tbody></table>
               </div>

	   </div>
              <% if (activities.previous && activities.next) { %>
              <div class="pagination-container wow zoomIn mar-b-1x" data-wow-duration="0.5s">
                <ul class="pagination">
                  <li class="pagination-item--wide first"> <a class="pagination-link--wide first" href="http://localhost:8080/api/dashboard?page=<%=activities.previous.page%>&limit=<%=activities.previous.limit%>">Previous</a> </li>
                  <li class="pagination-item--wide last"> <a class="pagination-link--wide last" href="http://localhost:8080/api/dashboard?page=<%=activities.next.page%>&limit=<%=activities.next.limit%>">Next</a> </li>
                </ul>
              </div>
              <% } else if (!activities.previous) { %>
                <div class="pagination-container wow zoomIn mar-b-1x" data-wow-duration="0.5s">
                  <ul class="pagination">
                    <li class="pagination-item--wide last"> <a class="pagination-link--wide last"
                        href="http://localhost:8080/api/dashboard?page=<%=activities.next.page%>&limit=<%=activities.next.limit%>">Next</a>
                    </li>
                  </ul>
                </div>
                <% } else { %>
                  <div class="pagination-container wow zoomIn mar-b-1x" data-wow-duration="0.5s">
                    <ul class="pagination">
                      <li class="pagination-item--wide first"> <a class="pagination-link--wide first"
                          href="http://localhost:8080/api/dashboard?page=<%=activities.previous.page%>&limit=<%=activities.previous.limit%>">Previous</a>
                      </li>
                    </ul>
                  </div>
                  <% } %>
      <% } else { %>
        <h5><% if (editing) { %><% } else { %>No Activities Recorded <% } %></h5>
        <% } %>
	 </div>
